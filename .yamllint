# -*- mode: yaml -*-
# vim:ts=2:sw=2:ai:si:syntax=yaml
---
extends: default

rules:
  braces:
    min-spaces-inside: 0
    max-spaces-inside: 1
  brackets:
    min-spaces-inside: 0
    max-spaces-inside: 1
  comments:
    require-starting-space: false
  indentation:
    spaces: 2
    indent-sequences: consistent
  line-length: disable
  truthy: disable
